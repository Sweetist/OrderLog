<div class="form-group row">

  <label class="control-label col-sm-2"><%= val.name%></label>
  <div class="col-sm-10">
    <% if val.name == "id" || val.type == :datetime%>
    <%= f.text_field val.name, :value => datum_value(datum, val), :readonly => true, :class => "form-control" %>
    <% elsif val.name == "delivery_id" || val.name == "order_id" || val.name == "recipient_id" || val.name == "bakery_id" %>

    <% if val.name == "bakery_id" %>
      <%= f.select val.name, @bakery_ids, {class: "form-control"} %> 
    <% else %>
      <%= f.hidden_field val.name, :value => datum_value(datum, val), :readonly => false, :class => "form-control" %>
    <% end %>

    <% elsif val.type == :string || val.type == :integer || val.type == :float %>
    <%= f.text_field val.name, :value => datum_value(datum, val), :class => "form-control" %>
    <% elsif val.type == :date %>
    <%= f.date_field val.name, :value => datum_value(datum, val), :class => "form-control" %>
    <% elsif val.type == :time %>
    <%= f.time_field val.name, :value => datum_value(datum, val), :class => "form-control" %>
    <% elsif val.type == :boolean%>  
    <%= f.check_box val.name, :value => datum_value(datum, val) %>
    <% end %>
  </div>    
</div>