<%= form_for(@table) do |f| %>
<%= render 'layouts/error_messages', object: f.object %>
  
  <% @headers.each do |key, val| %>
  	<%= val.name %>
  	<% if val.type == :string || val.type == :integer %>
  	  <%= f.text_field val.name %>
  	<% elsif val.type == :date %>
  	  <%= f.date_field val.name %>
  	<% elsif val.type == :time %>
  	  <%= f.time_field val.name %>
  	<% end %>
  	<br>
  <% end %>

  <%= f.submit "Add" %>

<% end %>