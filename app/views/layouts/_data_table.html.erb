<table class="table table-bordered">
  <thead>
  <tr>
    <% @headers.each do |key, val| %>
      <th>
        <%= val.name %>
      </th> 
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% if @data.any? %>
    <% @data.each do |datum| %>
      <tr>
      <% datum.attributes.each do |key,val| %>
        <td>
        <% if key == "bakery_id" %>
          <%= link_to val, bakery_path(val) unless val.nil?%> 
        <% elsif key == "recipient_id" %>
          <%= link_to val, recipient_path(val) unless val.nil?%>
        <% else %>
          <%= val %>
        <% end %>
        </td>
      <% end %>
      <td><%= link_to "edit", datum, method: :get %></td>
      <td><%= link_to "delete", datum, method: :delete %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>