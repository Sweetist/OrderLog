<table class="table table-bordered">
  <thead>
  <tr>
    <% headers.each do |key, val| %>
      <th>
        <%= val.name %>
      </th> 
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% if data.any? %>
    <% data.each do |datum| %>
      <tr class="<%= datum.id %>">
      <%= render 'layouts/data_row', datum: datum, top_level: true%> 
      <td><%= link_to "edit", datum, method: :get %></td>
      <td><%= link_to "delete", datum, method: :delete %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>